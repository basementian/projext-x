# FlipFlow Configuration
# Copy this file to .env and fill in your values

# Database (SQLite for local dev, PostgreSQL for production)
FLIPFLOW_DATABASE_URL=sqlite+aiosqlite:///./flipflow.db

# eBay API Mode: "mock" | "sandbox" | "production"
FLIPFLOW_EBAY_MODE=mock

# eBay API Credentials (not needed in mock mode)
FLIPFLOW_EBAY_CLIENT_ID=
FLIPFLOW_EBAY_CLIENT_SECRET=
FLIPFLOW_EBAY_REDIRECT_URI=
FLIPFLOW_EBAY_REFRESH_TOKEN=

# Fee Structure (defaults shown)
# FLIPFLOW_EBAY_BASE_FEE_RATE=0.13
# FLIPFLOW_PAYMENT_PROCESSING_RATE=0.029
# FLIPFLOW_PER_ORDER_FEE=0.30
# FLIPFLOW_MIN_PROFIT_FLOOR=5.00

# Zombie Detection
# FLIPFLOW_ZOMBIE_DAYS_THRESHOLD=60
# FLIPFLOW_ZOMBIE_VIEWS_THRESHOLD=10
# FLIPFLOW_MAX_ZOMBIE_CYCLES=3
# FLIPFLOW_RESURRECTION_DELAY_SECONDS=120

# SmartQueue
# FLIPFLOW_QUEUE_BATCH_SIZE=10
# FLIPFLOW_SURGE_WINDOW_DAY=sunday
